<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>TRTPO control system.</display-name>

  <context-param>
    <param-name>quartz:shutdown-on-unload</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>quartz:wait-on-shutdown</param-name>
    <param-value>true</param-value>
  </context-param>
  <context-param>
    <param-name>quartz:start-on-load</param-name>
    <param-value>true</param-value>
  </context-param>

  <listener>
    <listener-class>org.quartz.ee.servlet.QuartzInitializerListener</listener-class>
  </listener>

  <listener>
    <listener-class>timerTasks.RepositoryCheckerListener</listener-class>
  </listener>
  <listener>
    <listener-class>timerTasks.ScheduleCheckerListener</listener-class>
  </listener>

  <!--<welcome-file-list>-->
    <!--<welcome-file>JSP/mainpage.jsp</welcome-file>-->
  <!--</welcome-file-list>-->

</web-app>
